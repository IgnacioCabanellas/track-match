{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",  // Cambia a 'NodeNext'
    "moduleResolution": "NodeNext",  // Mant√©n esto como 'NodeNext'
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
